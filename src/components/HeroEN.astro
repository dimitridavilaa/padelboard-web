<section class="hero-section">
  <div class="hero-bg">
      <img src="/img/hero-background.jpg" alt="Padel Board screen" />
      <div class="overlay"></div>
  </div>
  
  <div class="hero-content fade-up">
      
      <div class="logo-wrapper">
          <img 
              src="/img/logo_padelboard.png" 
              alt="Logo Padel Board" 
              class="hero-logo-img"
          />
      </div>
      
      <h2 class="hero-subtitle">
        TAKE YOUR MATCHES TO THE NEXT LEVEL
      </h2>

  </div>
</section>

<style>
/* --- ESTRUCTURA GENERAL --- */
.hero-section {
  position: relative;
  height: 100vh; /* Ocupa toda la altura de la pantalla */
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: flex-end; /* ESTO ES CLAVE: Alinea todo el contenido AL FINAL (abajo) */
}

/* --- FONDO E IMAGEN --- */
.hero-bg {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  z-index: 1;
}

.hero-bg img {
  width: 100%; height: 100%;
  object-fit: cover; /* Asegura que la foto cubra todo sin deformarse */
  object-position: center; 
}

/* --- CONTENEDOR DE TEXTO --- */
.hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
    padding-bottom: 45px; /* Distancia desde abajo */
    
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Pega todo abajo */
    align-items: flex-start;   /* Pega todo a la IZQUIERDA */
    
    /* --- AQUÍ CONTROLAS EL ESPACIO IZQUIERDO --- */
    padding-left: 2vw; /* Usa el 4% del ancho de pantalla (ajusta si quieres más/menos) */
    padding-right: 20px; /* Margen de seguridad a la derecha */
  }

/* --- A. ESTILOS DEL LOGO (IMAGEN) --- */
.logo-wrapper {
    width: 100%;
    margin-bottom: 15px; /* Espacio pequeño entre logo y subtítulo */
}

.hero-logo-img {
    width: 100%; /* Intenta ocupar todo el ancho disponible */
    height: auto;
    /* --- [CONTROL DE TAMAÑO] --- */
    max-width: 600px; 
    
    display: block;
    /* Como la alineación en tu referencia parece a la izquierda, no usamos margin: auto */
}

/* --- B. ESTILOS DEL SUBTÍTULO --- */
.hero-subtitle {
  color: white;
  font-family: var(--fuente-titulos); /* Usa la fuente 'Anton' */
  
  /* Tamaño de letra del subtítulo */
  font-size: 2.6rem; 
  
  text-transform: uppercase;
  letter-spacing: 1px;
  margin: 0;
  line-height: 1;
  font-weight: 400; /* Anton es gruesa por defecto, no necesita bold */
  
  /* Sombra sutil para separar del fondo */
  text-shadow: 0 4px 10px rgba(0,0,0,0.5);
}

/* --- VERSIÓN MÓVIL (Celulares) --- */
@media (max-width: 768px) {
  .hero-content {
      padding-bottom: 120px; /* Más espacio abajo para no chocar con bordes de navegador */
      align-items: center;   /* En celular centramos todo */
      text-align: center;
  }

  .hero-logo-img {
      max-width: 90%; /* En celular ocupa el 90% del ancho de la pantalla */
  }

  .hero-subtitle {
      font-size: 1.8rem; /* Texto más pequeño en celular */
      text-shadow: 0 2px 4px rgba(0,0,0,0.8);
      text-align: left;
  }
  .hero-bg img {
      /* TRUCO PARA MOVER LA FOTO */
      /* Moverla más a la derecha (para ver lo que está a la izquierda) */
      object-position: 55% center; 
  }
}
</style>