<nav class="navbar">
  <div class="nav-content">
    
    <a href="/" class="logo-link">
      <img 
          src="/img/logo_padelboard.png" 
          alt="Padel Board Logo" 
          class="nav-logo" 
      />
    </a>

    <div class="nav-links desktop-only">
      
      <div class="dropdown-wrapper">
        <span class="nav-link-text">COMPONENTES ▾</span>
        
        <div class="dropdown-content">
            <a href="/#pantalla">PANTALLA</a>
            <a href="/#sensores">SENSORES</a>
            <a href="/#app-web">APP WEB</a>
        </div>
      </div>

      <a href="/#como-funciona">CÓMO FUNCIONA</a>
      <a href="/#beneficios">BENEFICIOS</a>
      <a href="/#usp">POR QUÉ NOSOTROS</a>
      <a href="/#formulario-b2b">CONTACTO</a>
    </div>

    <div class="nav-actions">
        <a href="/compra" class="btn-comprar">COMPRAR</a>
        <div class="menu-toggle mobile-only">☰</div>
    </div>

  </div>
  <div id="mobile-menu" class="mobile-menu-dropdown">
    <div class="mobile-links-container">
        
        <div class="accordion-wrapper">
            <button id="accordion-toggle" class="mobile-link accordion-btn">
                COMPONENTES <span id="arrow-icon">▾</span>
            </button>
            
            <div id="accordion-content" class="accordion-content">
                <a href="/#pantalla" class="mobile-link sub-link">Pantalla</a>
                <a href="/#sensores" class="mobile-link sub-link">Sensores</a>
                <a href="/#app-web" class="mobile-link sub-link">App Web</a>
            </div>
        </div>
        
        <a href="/#como-funciona" class="mobile-link">CÓMO FUNCIONA</a>
        <a href="/#beneficios" class="mobile-link">BENEFICIOS</a>
        <a href="/#usp" class="mobile-link">POR QUÉ NOSOTROS</a>
        <a href="/#formulario-b2b" class="mobile-link">CONTACTO</a>
        
        <a href="/compra" class="mobile-btn-comprar">COMPRAR AHORA</a>
    </div>
</div>
</nav>
<script>
  // Elementos principales
  const menuToggle = document.querySelector('.menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  // Elementos del Acordeón
  const accordionToggle = document.getElementById('accordion-toggle');
  const accordionContent = document.getElementById('accordion-content');
  const arrowIcon = document.getElementById('arrow-icon');

  // Enlaces que cierran el menú (todos MENOS el botón de acordeón)
  const links = document.querySelectorAll('.mobile-link:not(.accordion-btn), .mobile-btn-comprar');

  if (menuToggle && mobileMenu) {
      
      // 1. ABRIR / CERRAR MENÚ PRINCIPAL
      menuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('active');
          
          if (mobileMenu.classList.contains('active')) {
              menuToggle.textContent = '✕';
              document.body.style.overflow = 'hidden'; // Evita scroll fondo
          } else {
              menuToggle.textContent = '☰';
              document.body.style.overflow = '';
              
              // Opcional: Resetear acordeón al cerrar menú
              if(accordionContent) {
                  accordionContent.classList.remove('open');
                  accordionToggle?.classList.remove('open');
              }
          }
      });

      // 2. LÓGICA DEL ACORDEÓN (COMPONENTES)
      if (accordionToggle && accordionContent) {
          accordionToggle.addEventListener('click', (e) => {
              e.stopPropagation(); // Evita conflictos
              accordionContent.classList.toggle('open');
              accordionToggle.classList.toggle('open');
          });
      }

      // 3. CERRAR AL TOCAR UN ENLACE
      links.forEach(link => {
          link.addEventListener('click', () => {
              mobileMenu.classList.remove('active');
              menuToggle.textContent = '☰';
              document.body.style.overflow = '';
          });
      });
  }
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 15px 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0) 100%);
    transition: background 0.3s ease;
  }

  /* --- ESTRUCTURA PROFESIONAL CON GRID --- */
  .nav-content {
      display: grid;
      /* Define 3 columnas: 
         1. Espacio flexible (Izquierda)
         2. Tamaño automático del contenido (Centro)
         3. Espacio flexible (Derecha) 
      */
      grid-template-columns: 1fr auto 1fr; 
      align-items: center;
      width: 100%;
      
      /* --- MÁRGENES LATERALES --- */
      /* Esto separa el contenido de los bordes de la pantalla */
      padding-left: 30px; 
      padding-right: 30px; 
      
      /* Asegura que el padding no sume al ancho total y rompa el diseño */
      box-sizing: border-box; 
  }

  /* 1. LOGO (Alineado a la izquierda) */
  .logo-link {
      justify-self: start; /* Fuerza el logo al inicio de su celda */
      display: flex;
  }

  .nav-logo {
      height: 28px; /* Tamaño controlado */
      width: auto;
      display: block;
  }

  /* 2. ENLACES (Centrados absolutos) */
  .nav-links {
    display: flex;
    gap: 45px; /* Espacio entre enlaces */
    justify-self: center; /* Fuerza al centro de su celda */
  }

  .nav-links a {
    text-decoration: none;
    color: #FFFFFF;
    font-family: 'Anton', sans-serif; 
    font-size: 1.2rem;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: color 0.3s;
    white-space: nowrap; /* Evita que el texto se parta en dos líneas */
  }
  
  .nav-links a:hover {
    color: var(--color-amarillo);
  }

  /* 3. ACCIONES DERECHA (Botón + Hamburgesa) */
  .nav-actions {
      display: flex;
      justify-content: flex-end; /* Alinea todo al final a la derecha */
      align-items: center;
      gap: 15px; /* Espacio entre botón y hamburguesa en móvil */
      justify-self: end; /* Fuerza el bloque a la derecha de su celda */
  }

  .btn-comprar {
    background-color: var(--color-azul-claro);
    color: white;
    font-family: 'Anton', sans-serif;
    padding: 5px 25px; 
    border-radius: 50px;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 1px;
    transition: transform 0.2s, background-color 0.2s;
    box-shadow: 0 4px 15px rgba(52, 116, 225, 0.4);
    white-space: nowrap;
  }

  .btn-comprar:hover {
    background-color: #255bb5;
    transform: scale(1.05);
  }

  /* --- ESTILOS DEL DROPDOWN --- */
  
  /* 1. El contenedor del botón "COMPONENTES" */
  .dropdown-wrapper {
      position: relative; /* Vital para posicionar el menú hijo */
      display: flex;
      align-items: center;
      height: 100%;
      cursor: pointer;
  }

  /* 2. El texto "COMPONENTES ▾" */
  .nav-link-text {
      color: #FFFFFF;
      font-family: 'Anton', sans-serif; 
      font-size: 1.2rem; /* Mismo tamaño que tus otros links */
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: color 0.3s;
  }
  
  .dropdown-wrapper:hover .nav-link-text {
      color: var(--color-amarillo); /* Se ilumina al pasar el mouse */
  }

  /* 3. La caja oculta (El menú) */
  .dropdown-content {
      display: none; /* Oculto por defecto */
      position: absolute;
      top: 100%; /* Justo debajo del texto */
      left: 50%;
      transform: translateX(-50%); /* Centrado perfecto */
      flex-direction: column;
  }

  /* 4. La interacción (Mostrar al hacer Hover) */
  .dropdown-wrapper:hover .dropdown-content {
      display: flex;
  }

  /* 5. Los enlaces dentro del menú */
  .dropdown-content a {
      color: white !important;
      font-family: 'Anton', sans-serif !important; /* Usamos Outfit para mejor lectura en menú pequeño */
      font-size: 1.2rem !important;
      font-weight: bold;
      padding: 6px 20px;
      text-align: center;
      display: block;
      letter-spacing: 0.5px;
      text-shadow: 0 3px 6px rgba(0, 0, 0, 0.9);
  }

  .dropdown-content a:hover {
      color: var(--color-amarillo) !important;
  }

  .mobile-only { display: none; color: white; font-size: 1.8rem; cursor: pointer; }

  /* --- RESPONSIVE (MÓVIL) --- */
  @media (max-width: 1024px) {
      .nav-links { gap: 20px; }
      .nav-links a { font-size: 0.9rem; }
  }

  /* --- MÓVIL PRINCIPAL (Celulares) --- */
  @media (max-width: 900px) {
    /* Usamos Flex para separar Logo (izq) y Hamburguesa (der) */
    .nav-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-left: 20px;
        padding-right: 20px;
    }

    .desktop-only { display: none; }
    .mobile-only { display: block; }
    
    /* [FIX HEADER] Ocultamos botón comprar de la barra superior */
    .nav-actions .btn-comprar { display: none !important; }
    
    /* Ajuste para que la hamburguesa sea fácil de tocar */
    .nav-actions { gap: 0; } 
  }

  /* --- ESTILO MENÚ DESPLEGABLE --- */
  .mobile-menu-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: #04133E; /* Azul oscuro */
    box-shadow: 0 10px 20px rgba(0,0,0,0.7);
    
    /* [FIX LÍNEA] Aquí borramos la línea molesta: */
    border-top: none; 
    
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease-in-out;
  }

  .mobile-menu-dropdown.active {
      max-height: 100vh; /* Permitimos que crezca lo necesario */
  }

  .mobile-links-container {
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      align-items: center; /* Centramos todo el texto */
  }

  /* Enlaces normales */
  .mobile-link {
      color: white;
      font-family: 'Anton', sans-serif;
      font-size: 1.4rem; /* Un poco más grande para leer bien */
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 1px;
      cursor: pointer;
  }

  /* --- ESTILOS DEL ACORDEÓN (COMPONENTES) --- */
  .accordion-wrapper {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
  }

  /* El botón se disfraza de enlace normal */
  .accordion-btn {
      background: none;
      border: none;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      transition: color 0.3s;
      width: 100%;
  }

  /* Esto crea un espacio invisible a la izquierda igual al de la flecha de la derecha,
     equilibrando el texto perfectamente en el centro. */
  .accordion-btn::before {
      content: "▾";      /* Mismo contenido que la flecha */
      font-size: 1.2rem; /* Mismo tamaño */
      visibility: hidden;/* ¡Invisible! */
  }
  
  /* Flechita */
  #arrow-icon {
      font-size: 1.2rem;
      transition: transform 0.3s ease;
      display: inline-block;
  }

  /* Al abrir, rotamos la flecha y cambiamos color */
  .accordion-btn.open { color: var(--color-amarillo); }
  .accordion-btn.open #arrow-icon { transform: rotate(180deg); }

  /* Contenido oculto (Pantalla, Sensores...) */
  .accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      border-radius: 10px;
  }

  .accordion-content.open {
      max-height: 150px;
  }

  .sub-link {
      font-family: 'Outfit', sans-serif; /* Fuente diferente para jerarquía */
      font-size: 1rem;
      color: white;
      margin: 8px 0;
  }

  .divider {
      border: 0; border-top: 1px solid rgba(255,255,255,0.1);
      width: 50%;
      margin: 0px 0;
  }

  .mobile-btn-comprar {
      background-color: var(--color-azul-claro);
      color: white;
      text-align: center;
      padding: 15px 40px;
      border-radius: 50px;
      text-decoration: none;
      font-family: 'Anton', sans-serif;
      letter-spacing: 1px;
      margin-top: 15px;
  }
</style>