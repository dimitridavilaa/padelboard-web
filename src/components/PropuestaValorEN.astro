---
// src/components/PropuestaValor.astro
// Esta sección usa Pestañas (Tabs) para segmentar B2B y B2R
---

<section id="benefits" class="propuesta-section">
  <div class="container fade-up">
    <h2 class="h2-titulo">A PROFESSIONAL EXPERIENCE FOR EVERYONE</h2>

    <div class="tabs-wrapper">
      
      <div class="tab-links">
        <button class="tab-link active" data-tab="tab-b2b">
          For Clubs & Sponsors
        </button>
  
        <button class="tab-link" data-tab="tab-b2c">
          For Players
        </button>
      </div>

      <div class="tab-content">
        
        <div id="tab-b2b" class="tab-pane active">
          <ul>
            <li>
              <strong>Modernize Your Facilities:</strong> Radically differentiate yourself from the competition. Offer the technological experience your clients expect.
            </li>
            <li>
              <strong>New Revenue (Dynamic Sponsorships):</strong> Sell premium digital advertising space on the screen. Rotate sponsors and maximize your income.
            </li>
            <li>
              <strong>Elevate the Experience:</strong> Every match feels like a professional final. This builds loyalty and keeps clients coming back more often.
            </li>
            <li>
              <strong>Boost Your Marketing:</strong> When players record their points for Instagram, your scoreboard (and your sponsor's logo!) will appear in every video.
            </li>
          </ul>
        </div>

        <div id="tab-b2c" class="tab-pane">
          <ul>
            <li>
              <strong>Zero Arguments:</strong> The score is always correct. Zero friction, 100% padel.
            </li>
            <li>
              <strong>Pro Experience:</strong> Feel like you're playing a professional tournament every time you step on the court.
            </li>
            <li>
              <strong>Focus on the Game:</strong> Stop wasting mental energy remembering the score and use it to win the next point.
            </li>
          </ul>
        </div>

      </div> 
  </div> 
</section>

<style>
  .propuesta-section {
      padding: 80px 20px;
      /* CAMBIO: Fondo oscuro para mantener la inmersión */
      background-color: var(--color-azul-fondo); 
      color: white;
      /* Opcional: Un borde sutil arriba para separarlo de la sección anterior */
      border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .container { 
      max-width: 1100px;
      margin: 0 auto; 
  }
  
  .h2-titulo {
      font-family: var(--fuente-titulos);
      font-size: 3rem;
      text-transform: uppercase;
      text-align: center; 
      margin-top: 0; 
      margin-bottom: 50px;
      color: var(--color-amarillo);
      text-shadow: 0 5px 20px rgba(0,0,0,0.6);
      letter-spacing: 1px;
  }

  /* --- ESTILOS DE PESTAÑAS (TABS) --- */
  .tabs-wrapper { 
      max-width: 800px;
      margin: 0 auto; 
  }

  .tab-links {
      display: flex;
      /* CAMBIO: Borde inferior más sutil y transparente */
      border-bottom: 2px solid rgba(255, 255, 255, 0.1); 
      margin-bottom: 30px;
  }

  .tab-link {
      font-family: var(--fuente-cuerpo);
      padding: 15px 24px;
      cursor: pointer;
      background: none;
      border: none;
      font-size: 1.2rem;
      font-weight: 400;
      /* Texto inactivo en gris claro */
      color: rgba(255, 255, 255, 0.5); 
      position: relative;
      top: 2px;
      transition: all 0.3s ease;
      flex: 1; /* Esto ayuda a distribuir espacio en móvil */
  }

  .tab-link:hover { 
      color: white;
  }
  
  /* ESTILO PESTAÑA ACTIVA */
  .tab-link.active {
      color: white;
      font-weight: 700;
      /* Borde inferior brillante */
      border-bottom: 3px solid var(--color-azul-claro); 
      /* Fondo degradado muy sutil */
      background: linear-gradient(to top, rgba(255, 222, 89, 0.05), transparent);
  }

  /* --- CONTENIDO DE LAS PESTAÑAS --- */
  .tab-pane { display: none; }
  .tab-pane.active { display: block; animation: fadeIn 0.5s ease; }

  .tab-pane ul {
      list-style-type: none;
      padding-left: 0;
      margin: 0;
  }

  .tab-pane li {
      font-family: var(--fuente-cuerpo);
      font-size: 1.2rem;
      line-height: 1.6;
      margin-bottom: 30px;
      padding-left: 45px; 
      position: relative;
      color: rgba(255, 255, 255, 0.9); /* Blanco casi puro */
  }

  /* La pelotita como viñeta */
  .tab-pane li::before {
      content: '';
      position: absolute;
      left: 12px;
      top: 7px; 
      width: 18px;
      height: 18px;
      background-image: url('/img/pelota-padelboard.png'); 
      background-size: contain;
      background-repeat: no-repeat;
  }

  /* Títulos de cada punto */
  .tab-pane li strong {
      display: block;
      font-size: 1.3rem;
      font-weight: 500; 
      color: white;
      margin-bottom: 5px;
      font-family: var(--fuente-titulos); /* Usamos la fuente de títulos para dar fuerza */
      letter-spacing: 0.5px;
  }

  @keyframes fadeIn { 
      from { opacity: 0; transform: translateY(10px); } 
      to { opacity: 1; transform: translateY(0); } 
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 768px) {
    .propuesta-section {
      padding: 80px 1px;
    }
      .h2-titulo { font-size: 2.1rem; }
      
      .tab-link { 
          font-size: 1rem; 
          padding: 12px 30px;
          white-space: normal; /* Asegura que el texto pueda bajar de línea */
          line-height: 1.2;
      }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const tabLinks = document.querySelectorAll('.tab-link');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabLinks.forEach(link => {
      link.addEventListener('click', () => {
        const tabId = link.getAttribute('data-tab');

        // Resetear todos
        tabLinks.forEach(btn => btn.classList.remove('active'));
        tabPanes.forEach(pane => pane.classList.remove('active'));

        // Activar el seleccionado
        link.classList.add('active');
        const activePane = document.getElementById(tabId);
        if(activePane) activePane.classList.add('active');
      });
    });
  });
</script>