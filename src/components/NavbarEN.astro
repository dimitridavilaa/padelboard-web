<script>
  // Elementos principales
  const menuToggle = document.querySelector('.menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  // Elementos del Acorde√≥n
  const accordionToggle = document.getElementById('accordion-toggle');
  const accordionContent = document.getElementById('accordion-content');
  const arrowIcon = document.getElementById('arrow-icon');

  // Enlaces que cierran el men√∫ (todos MENOS el bot√≥n de acorde√≥n)
  const links = document.querySelectorAll('.mobile-link:not(.accordion-btn), .mobile-btn-comprar');

  if (menuToggle && mobileMenu) {
      
      // 1. ABRIR / CERRAR MEN√ö PRINCIPAL
      menuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('active');
          
          if (mobileMenu.classList.contains('active')) {
              menuToggle.textContent = '‚úï';
              document.body.style.overflow = 'hidden'; // Evita scroll fondo
          } else {
              menuToggle.textContent = '‚ò∞';
              document.body.style.overflow = '';
              
              // Opcional: Resetear acorde√≥n al cerrar men√∫
              if(accordionContent) {
                  accordionContent.classList.remove('open');
                  accordionToggle?.classList.remove('open');
              }
          }
      });

      // 2. L√ìGICA DEL ACORDE√ìN (COMPONENTES)
      if (accordionToggle && accordionContent) {
          accordionToggle.addEventListener('click', (e) => {
              e.stopPropagation(); // Evita conflictos
              accordionContent.classList.toggle('open');
              accordionToggle.classList.toggle('open');
          });
      }

      // 3. CERRAR AL TOCAR UN ENLACE
      links.forEach(link => {
          link.addEventListener('click', () => {
              mobileMenu.classList.remove('active');
              menuToggle.textContent = '‚ò∞';
              document.body.style.overflow = '';
          });
      });
  }
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 15px 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0) 100%);
    transition: background 0.3s ease;
  }

  /* --- ESTRUCTURA PROFESIONAL CON GRID --- */
  .nav-content {
      display: grid;
      /* Define 3 columnas: 
         1. Espacio flexible (Izquierda)
         2. Tama√±o autom√°tico del contenido (Centro)
         3. Espacio flexible (Derecha) 
      */
      grid-template-columns: 1fr auto 1fr; 
      align-items: center;
      width: 100%;
      
      /* --- M√ÅRGENES LATERALES --- */
      /* Esto separa el contenido de los bordes de la pantalla */
      padding-left: 30px; 
      padding-right: 30px; 
      
      /* Asegura que el padding no sume al ancho total y rompa el dise√±o */
      box-sizing: border-box; 
  }

  /* 1. LOGO (Alineado a la izquierda) */
  .logo-link {
      justify-self: start; /* Fuerza el logo al inicio de su celda */
      display: flex;
  }

  .nav-logo {
      height: 28px; /* Tama√±o controlado */
      width: auto;
      display: block;
  }

  /* 2. ENLACES (Centrados absolutos) */
  .nav-links {
    display: flex;
    gap: 45px; /* Espacio entre enlaces */
    justify-self: center; /* Fuerza al centro de su celda */
  }

  .nav-links a {
    text-decoration: none;
    color: #FFFFFF;
    font-family: 'Anton', sans-serif; 
    font-size: 1.2rem;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: color 0.3s;
    white-space: nowrap; /* Evita que el texto se parta en dos l√≠neas */
  }
  
  .nav-links a:hover {
    color: var(--color-amarillo);
  }

  /* 3. ACCIONES DERECHA (Bot√≥n + Hamburgesa) */
  .nav-actions {
      display: flex;
      justify-content: flex-end; /* Alinea todo al final a la derecha */
      align-items: center;
      gap: 15px; /* Espacio entre bot√≥n y hamburguesa en m√≥vil */
      justify-self: end; /* Fuerza el bloque a la derecha de su celda */
  }

  .btn-comprar {
    background-color: var(--color-azul-claro);
    color: white;
    font-family: 'Anton', sans-serif;
    padding: 5px 25px; 
    border-radius: 50px;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 1px;
    transition: transform 0.2s, background-color 0.2s;
    box-shadow: 0 4px 15px rgba(52, 116, 225, 0.4);
    white-space: nowrap;
  }

  .btn-comprar:hover {
    background-color: #255bb5;
    transform: scale(1.05);
  }

  /* --- ESTILOS DEL DROPDOWN --- */
  
  /* 1. El contenedor del bot√≥n "COMPONENTES" */
  .dropdown-wrapper {
      position: relative; /* Vital para posicionar el men√∫ hijo */
      display: flex;
      align-items: center;
      height: 100%;
      cursor: pointer;
  }

  /* 2. El texto "COMPONENTES ‚ñæ" */
  .nav-link-text {
      color: #FFFFFF;
      font-family: 'Anton', sans-serif; 
      font-size: 1.2rem; /* Mismo tama√±o que tus otros links */
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: color 0.3s;
  }
  
  .dropdown-wrapper:hover .nav-link-text {
      color: var(--color-amarillo); /* Se ilumina al pasar el mouse */
  }

  /* 3. La caja oculta (El men√∫) */
  .dropdown-content {
      display: none; /* Oculto por defecto */
      position: absolute;
      top: 100%; /* Justo debajo del texto */
      left: 50%;
      transform: translateX(-50%); /* Centrado perfecto */
      flex-direction: column;
  }

  /* 4. La interacci√≥n (Mostrar al hacer Hover) */
  .dropdown-wrapper:hover .dropdown-content {
      display: flex;
  }

  /* 5. Los enlaces dentro del men√∫ */
  .dropdown-content a {
      color: white !important;
      font-family: 'Anton', sans-serif !important; /* Usamos Outfit para mejor lectura en men√∫ peque√±o */
      font-size: 1.2rem !important;
      font-weight: bold;
      padding: 6px 20px;
      text-align: center;
      display: block;
      letter-spacing: 0.5px;
      text-shadow: 0 3px 6px rgba(0, 0, 0, 0.9);
  }

  .dropdown-content a:hover {
      color: var(--color-amarillo) !important;
  }

  .mobile-only { display: none; color: white; font-size: 1.8rem; cursor: pointer; }

  /* --- ESTILOS DEL SELECTOR DE IDIOMA (DROPDOWN) --- */
  .lang-dropdown {
      position: relative;
      margin-right: 15px;
      display: flex;
      align-items: center;
      /* Importante: No ponemos height 100% para no estirar el contenedor */
  }

  /* 1. EL BOT√ìN PRINCIPAL (ARRIBA) */
  .lang-btn {
      background: transparent;
      border: 1px solid rgba(255,255,255,0.3);
      color: white;
      font-family: 'Anton', sans-serif;
      font-size: 0.9rem;
      cursor: pointer;
      padding: 6px 12px; /* Un poco m√°s de aire */
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
      transition: all 0.3s ease;
      /* Aseguramos que tenga un ancho m√≠nimo consistente */
      min-width: 80px; 
  }

  .lang-btn:hover {
      border-color: var(--color-amarillo);
      color: var(--color-amarillo);
  }

  .arrow { font-size: 0.8rem; }
  .flag { font-size: 1rem; }

  /* 2. EL MEN√ö (CONTENEDOR INVISIBLE) */
  .lang-menu {
      display: none;
      position: absolute;
      top: 100%; /* Justo debajo */
      left: 0;
      width: 100%; /* CLAVE: Ancho id√©ntico al bot√≥n de arriba */
      margin-top: 5px; /* Peque√±a separaci√≥n est√©tica */
      z-index: 1001;
      
      /* Quitamos estilos de caja vieja */
      background: transparent;
      backdrop-filter: blur(1px);
      border: none;
      box-shadow: none;
      padding: 0;
  }

  /* Muestra el men√∫ al pasar el mouse */
  .lang-dropdown:hover .lang-menu {
      display: block;
      animation: fadeIn 0.2s ease;
  }

  /* 3. LA OPCI√ìN (EL BOT√ìN DE ABAJO - CLON DEL DE ARRIBA) */
  .lang-option {
      display: flex;
      align-items: center;
      justify-content: center; /* Centrado igual que arriba */
      gap: 6px;
      
      /* Estilo id√©ntico al bot√≥n padre */
      padding: 6px 12px;
      border: 1px solid rgba(255,255,255,0.3); /* Borde sutil inicial */
      border-radius: 4px;
      
      color: white;
      text-decoration: none;
      font-family: 'Anton', sans-serif;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      width: 100%; /* Ocupa todo el espacio disponible */
      box-sizing: border-box; /* Para que el padding no rompa el ancho */
  }

  .lang-option:hover {
      border-color: var(--color-amarillo);
      color: var(--color-amarillo);
  }

  /* 4. EL PUENTE INVISIBLE (Para que no se cierre al bajar el mouse) */
  .lang-menu::before {
      content: "";
      position: absolute;
      top: -10px; /* Cubre el hueco de margin-top */
      left: 0;
      width: 100%;
      height: 15px;
      background: transparent;
  }

  @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-5px); }
      to { opacity: 1; transform: translateY(0); }
  }

  /* --- ESTILOS M√ìVIL (SWITCH) --- */
  .mobile-lang-switch {
      display: flex;
      align-items: center;
      gap: 15px;
      margin: 10px 0 20px 0;
      border: 1px solid rgba(255,255,255,0.2);
      padding: 10px 30px;
      border-radius: 50px;
  }

  .active-lang {
      color: var(--color-amarillo);
      font-weight: bold;
      font-family: 'Anton', sans-serif;
      font-size: 1.2rem;
  }

  .inactive-lang {
      color: white;
      font-family: 'Anton', sans-serif;
      font-size: 1.2rem;
      text-decoration: none;
      opacity: 0.6;
  }
  
  .mobile-lang-switch .divider {
      color: rgba(255,255,255,0.2);
  }

  /* --- RESPONSIVE (M√ìVIL) --- */
  @media (max-width: 1024px) {
      .nav-links { gap: 20px; }
      .nav-links a { font-size: 0.9rem; }
  }

  /* --- M√ìVIL PRINCIPAL (Celulares) --- */
  @media (max-width: 900px) {
    /* Usamos Flex para separar Logo (izq) y Hamburguesa (der) */
    .nav-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-left: 20px;
        padding-right: 20px;
    }

    .desktop-only { display: none; }
    .mobile-only { display: block; }
    
    /* [FIX HEADER] Ocultamos bot√≥n comprar de la barra superior */
    .nav-actions .btn-comprar { display: none !important; }

    .lang-dropdown { 
          display: none;
      }
      
      /* Ajuste de m√°rgenes para el men√∫ m√≥vil */
      .nav-actions {
          gap: 0; 
      }
  }

  /* --- ESTILO MEN√ö DESPLEGABLE --- */
  .mobile-menu-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: #04133E; /* Azul oscuro */
    box-shadow: 0 10px 20px rgba(0,0,0,0.7);
    
    /* [FIX L√çNEA] Aqu√≠ borramos la l√≠nea molesta: */
    border-top: none; 
    
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease-in-out;
  }

  .mobile-menu-dropdown.active {
      max-height: 100vh; /* Permitimos que crezca lo necesario */
  }

  .mobile-links-container {
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      align-items: center; /* Centramos todo el texto */
  }

  /* Enlaces normales */
  .mobile-link {
      color: white;
      font-family: 'Anton', sans-serif;
      font-size: 1.4rem; /* Un poco m√°s grande para leer bien */
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 1px;
      cursor: pointer;
  }

  /* --- ESTILOS DEL ACORDE√ìN (COMPONENTES) --- */
  .accordion-wrapper {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
  }

  /* El bot√≥n se disfraza de enlace normal */
  .accordion-btn {
      background: none;
      border: none;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      transition: color 0.3s;
      width: 100%;
  }

  /* Esto crea un espacio invisible a la izquierda igual al de la flecha de la derecha,
     equilibrando el texto perfectamente en el centro. */
  .accordion-btn::before {
      content: "‚ñæ";      /* Mismo contenido que la flecha */
      font-size: 1.2rem; /* Mismo tama√±o */
      visibility: hidden;/* ¬°Invisible! */
  }
  
  /* Flechita */
  #arrow-icon {
      font-size: 1.2rem;
      transition: transform 0.3s ease;
      display: inline-block;
  }

  /* Al abrir, rotamos la flecha y cambiamos color */
  .accordion-btn.open { color: var(--color-amarillo); }
  .accordion-btn.open #arrow-icon { transform: rotate(180deg); }

  /* Contenido oculto (Pantalla, Sensores...) */
  .accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      border-radius: 10px;
  }

  .accordion-content.open {
      max-height: 150px;
  }

  .sub-link {
      font-family: 'Outfit', sans-serif; /* Fuente diferente para jerarqu√≠a */
      font-size: 1rem;
      color: white;
      margin: 8px 0;
  }

  .divider {
      border: 0; border-top: 1px solid rgba(255,255,255,0.1);
      width: 50%;
      margin: 0px 0;
  }

  .mobile-btn-comprar {
      background-color: var(--color-azul-claro);
      color: white;
      text-align: center;
      padding: 15px 40px;
      border-radius: 50px;
      text-decoration: none;
      font-family: 'Anton', sans-serif;
      letter-spacing: 1px;
      margin-top: 15px;
  }
</style>